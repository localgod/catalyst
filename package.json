{
    "name": "catalyst",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "exec": "node ./dist/src/catalyst.mjs -i diagram.puml -o output_p.drawio",
        "exec:dagre": "node ./dist/src/catalyst.mjs -i diagram.puml -o output_d.drawio --use-dagre",
